import streamlit as st
import pandas as pd
import numpy as np
import plotly.express as px

st.set_page_config(page_title="Netflix Dashboard", layout="wide")

st.title("ğŸ¬ Netflix Interactive Analytics Dashboard")

# Load Dataset (Replace with your actual CSV)
np.random.seed(42)
n = 500

df = pd.DataFrame({
    "title": [f"Title_{i}" for i in range(n)],
    "type": np.random.choice(["Movie", "Show"], n, p=[0.7, 0.3]),
    "release_year": np.random.randint(2000, 2024, n),
    "age_certification": np.random.choice(["G", "PG", "PG-13", "R", "TV-MA"], n),
    "runtime": np.random.randint(60, 180, n),
    "imdb_score": np.round(np.random.uniform(4, 9, n), 1),
    "imdb_votes": np.random.randint(1000, 500000, n),
    "production_country": np.random.choice(["USA", "India", "UK", "Canada", "France"], n)
})

# ---------------- Sidebar Filters ----------------
st.sidebar.header("ğŸ” Filters")

year_range = st.sidebar.slider(
    "Release Year Range",
    int(df.release_year.min()),
    int(df.release_year.max()),
    (2010, 2023)
)

content_type = st.sidebar.multiselect(
    "Select Type",
    options=df.type.unique(),
    default=df.type.unique()
)

df = df[
    (df.release_year >= year_range[0]) &
    (df.release_year <= year_range[1]) &
    (df.type.isin(content_type))
]

# ---------------- KPI Section ----------------
col1, col2, col3, col4 = st.columns(4)

col1.metric("Total Titles", len(df))
col2.metric("Movies", len(df[df.type == "Movie"]))
col3.metric("Shows", len(df[df.type == "Show"]))
col4.metric("Avg IMDb Score", round(df.imdb_score.mean(), 2))

st.divider()

# ---------------- Charts ----------------

# Content Growth
year_counts = df.release_year.value_counts().sort_index().reset_index()
year_counts.columns = ["release_year", "count"]

st.plotly_chart(
    px.line(year_counts, x="release_year", y="count",
            title="Content Growth Over Years"),
    use_container_width=True
)

# Movies vs Shows
type_counts = df.type.value_counts().reset_index()
type_counts.columns = ["type", "count"]

st.plotly_chart(
    px.pie(type_counts, names="type", values="count",
           title="Movies vs Shows Distribution"),
    use_container_width=True
)

# Age Certification
age_counts = df.age_certification.value_counts().reset_index()
age_counts.columns = ["age_certification", "count"]

st.plotly_chart(
    px.bar(age_counts, x="age_certification", y="count",
           title="Age Certification Distribution"),
    use_container_width=True
)

# IMDb Engagement
st.plotly_chart(
    px.scatter(df, x="imdb_votes", y="imdb_score",
               title="IMDb Votes vs IMDb Score"),
    use_container_width=True
)

# Production Country
country_counts = df.production_country.value_counts().reset_index()
country_counts.columns = ["production_country", "count"]

st.plotly_chart(
    px.bar(country_counts, x="production_country", y="count",
           title="Production Country Distribution"),
    use_container_width=True
)
